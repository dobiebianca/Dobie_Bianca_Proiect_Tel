@page "{id:int?}"
@model Dobie_Bianca_Proiect_Tel.Pages.Phones.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Phone[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone[0].PublishingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone[0].Seller.SellerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone[0].PhoneCategories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
 @foreach (var item in Model.PhoneD.Phones)
        {
            string selectedRow = "";
            if (item.ID == Model.PhoneID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishingDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Seller.SellerName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
